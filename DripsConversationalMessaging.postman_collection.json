    {
      "name": "Conversations",
      "item": [
        {
          "name": "Get Priority Conversations",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200 OK', () => { pm.response.to.have.status(200); });",
                  "pm.test('Response is an array', () => { pm.expect(pm.response.json()).to.be.an('array'); });",
                  "pm.test('All conversations have isHighPriority: true', () => {",
                  "    pm.response.json().forEach(conv => {",
                  "        pm.expect(conv.isHighPriority).to.be.true;",
                  "    });",
                  "});",
                  "pm.test('Each conversation includes its messages array', () => {",
                  "    pm.response.json().forEach(conv => {",
                  "        pm.expect(conv).to.have.property('messages').that.is.an('array');",
                  "    });",
                  "});",
                  "const frustratedId = pm.collectionVariables.get('frustratedConversationId');",
                  "if (frustratedId) {",
                  "    pm.test('Frustrated conversation is present in results', () => {",
                  "        const ids = pm.response.json().map(c => c.id);",
                  "        pm.expect(ids).to.include(frustratedId);",
                  "    });",
                  "} else {",
                  "    console.warn('frustratedConversationId not set - run Ingest Frustrated first.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/conversations/priority",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "conversations", "priority" ]
